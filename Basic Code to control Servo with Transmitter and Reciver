#This the basic Code to controll a servo with Reciver and Transmitter

#include <Servo.h>
int servopin = 5;
Servo myservo;
char val;

void setup() {
  myservo.attach(servopin);
  Serial.begin(38400); // Default communication rate of the Bluetooth module
}
void loop() {
 if(Serial.available() > 0){ // Checks whether data is comming from the serial port
    val = Serial.read(); // Reads the data from the serial port
 }
 //Serial.println(val);
 //delay(1000);
 
  if(val=='F'){
    Serial.println("Forward");
    Serial.println(val);
    delay(1000);
  }
  else if(val=='B'){
    Serial.println("Backward");
    Serial.println(val);
    delay(1000);
  }
  else if(val=='S'){
    Serial.println("Stable");
    Serial.println(val);
    delay(1000);
  }
  else if(val=='R'){
    Serial.println("Rightward");
    Serial.println(val);
    delay(1000);
  }
  else if(val=='L'){
    Serial.println("Leftward");
    Serial.println(val);
    delay(1000);
  }
  else{
    Serial.println("Error!");
    Serial.println(val);
    delay(1000);
  }
}

